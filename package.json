{
    "name": "source-engine-support",
    "displayName": "Source Engine Support",
    "description": "Adds support for Source Engine file types and other commands",
    "version": "0.0.6",
    "icon": "extension-icon-256.png",
    "author": {
        "name": "Stefan Heinz",
        "email": "me@stefanheinz.at",
        "url": "https://www.stefanheinz.at"
    },
    "publisher": "stefan-h-at",
    "license": "SEE LICENSE IN 'LICENSE'",
    "repository": {
        "type": "github",
        "url": "https://github.com/StefanH-AT/Source-Engine-VSCode-Extension"
    },
    "categories": [
        "Programming Languages",
        "Visualization"
    ],
    "keywords": [
        "source engine",
        "valve",
        "hammer",
        "source sdk"
    ],
    "engines": {
        "vscode": "^1.59.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "jest"
    },
    "main": "./out/main.js",
    "activationEvents": [
        "onLanguage:keyvalue3",
        "onLanguage:vmt",
        "onLanguage:captions"
    ],
    "contributes": {
        "languages": [
            {
                "id": "keyvalue3",
                "aliases": [
                    "Valve Keyvalue 3",
                    "keyvalue3"
                ],
                "extensions": [
                    ".kv",
                    ".res",
                    ".txt"
                ],
                "filenames": [
                    "gameinfo.txt"
                ],
                "firstLine": "^\"?(?i)\\w(?-i)\"?",
                "configuration": "./language-configuration.json"
            },
            {
                "id": "vmt",
                "aliases": [
                    "Valve Material Type",
                    "vmt"
                ],
                "extensions": [
                    ".vmt"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "fgd",
                "aliases": [
                    "FGD",
                    "Forge Game Data",
                    "Hammer Game Data"
                ],
                "extensions": [
                    ".fgd"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "captions",
                "aliases": [
                    "Source Engine Captions",
                    "Source Engine Subtitles"
                ],
                "firstLine": "^\"?(?i)lang(?-i)\"?",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "keyvalue3",
                "scopeName": "source.kv",
                "path": "./syntaxes/keyvalue3.tmLanguage.json"
            },
            {
                "language": "vmt",
                "scopeName": "source.kv.vmt",
                "path": "./syntaxes/vmt.tmLanguage.json"
            },
            {
                "language": "fgd",
                "scopeName": "source.fgd",
                "path": "./syntaxes/fgd.tmLanguage.json"
            },
            {
                "language": "captions",
                "scopeName": "source.captions",
                "path": "./syntaxes/captions.tmLanguage.json"
            }
        ],
        "commands": [],
        "configuration": {
            "title": "Source Engine",
